@model IEnumerable<Lagarsystem.Models.StockItem>

@{
    ViewBag.Title = "Index";
}
@ViewData["Message"]
@if (TempData["Message"] != null)
{
    <div class="alert alert-danger" role="alert">
        <strong>Something Went wrong!</strong> @TempData["Message"]
    </div>
}

<h2>Index</h2>

<div class="row">
    <div class="col-sm-8 col-md-8">
        @Html.ActionLink("Create New", "Create")
    </div>
    <div class="col-sm-4 col-md-4">
        @using (Html.BeginForm("Search", "Stock", FormMethod.Post, new { @class = "form-horizontal", @role = "search" }))
        {
            <div class="input-group">
                @Html.TextBox("SearchTerm", "", new { @class = "form-control", @placeholder = "Search" })
                <div class="input-group-btn">
                    <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                </div>
            </div>
        }@{Html.EndForm();}
    </div>
</div>

    <table class="table" data-toggle="table">
        <thead>
            <tr>
                <th data-sortable="true">
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th data-sortable="true">
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th data-sortable="true">
                    @Html.DisplayNameFor(model => model.Shelf)
                </th>
                <th data-sortable="true">
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Shelf)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ItemID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.ItemID }) |
                        @Html.ActionLink("Remove", "Remove", new { id = item.ItemID })
                    </td>
                </tr>
            }
        </tbody>
    </table>
