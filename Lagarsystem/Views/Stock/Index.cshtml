@model IEnumerable<StockItem>
@{
    StockItem CreateModel = new StockItem();
}

@{
    ViewBag.Title = "Index";
}
@if (TempData["Message"] != null)
{
    
}

<div class="alert text-center" role="alert" id="general-alert">
</div>

<h2>Index</h2>

<div class="row">
    <div class="col-sm-8 col-md-8">
        <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#createModal">
            Create
        </button>
    </div>
    <div class="col-sm-4 col-md-4">
        <form method="get" action='@Url.Action("Search")'
              data-script-ajax="true" data-script-target="#itemslist">
            <div class="input-group">
                <input type="search" class="form-control typeahead" placeholder="Search" name="SearchTerm" data-script-autocomplete="@Url.Action("AutoComplete")" />
                <!--@@Html.TextBox("SearchTerm", "", new { @@class = "form-control", @@placeholder = "Search" })>-->
                <div class="input-group-btn">
                    <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                </div>
            </div>
        </form>
    </div>
</div>
<table class="table" data-toggle="table">
    <thead>
        <tr>
            <th data-sortable="true">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th data-sortable="true">
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th data-sortable="true">
                @Html.DisplayNameFor(model => model.Shelf)
            </th>
            <th data-sortable="true">
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    @Html.Partial("ItemsList", Model)
</table>

<div class="modal fade" tabindex="-1" role="dialog" id="createModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Create</h4>
            </div>
            <div class="modal-body">
                @Html.Partial("CreateModal", CreateModel)
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <input type="submit" value="Create" class="btn btn-primary" id="createModalSubmit"/>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<div class="modal fade" tabindex="-1" role="dialog" id="editModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Create</h4>
            </div>
            <div class="modal-body">
                
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <input type="submit" value="Save" class="btn btn-primary" id="editModalSubmit" />
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
